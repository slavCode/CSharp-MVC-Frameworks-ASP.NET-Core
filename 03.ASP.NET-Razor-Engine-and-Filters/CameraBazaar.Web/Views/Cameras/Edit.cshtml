@model CameraEditModel
@{
    ViewData["Title"] = "Edit Camera";
}

<h2>@ViewData["Title"]</h2>
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div class="form-group">
                <label asp-for="Make"></label>
                <select asp-for="Make" asp-items="Html.GetEnumSelectList<CameraMake>()" class="form-control"><option value="" class="hidden">@Model.Make</option></select>
            </div>
            <div class="form-group">
                <label asp-for="Model"></label>
                <input asp-for="Model" class="form-control" />
                <span asp-validation-for="Model" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Price"></label>
                <input asp-for="Price" class="form-control" min="0" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MinShutterSpeed"></label>
                <input asp-for="MinShutterSpeed" min="1" max="30" class="form-control" />
                <span asp-validation-for="MinShutterSpeed" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MaxShutterSpeed"></label>
                <input asp-for="MaxShutterSpeed" min="2000" max="8000" class="form-control" />
                <span asp-validation-for="MaxShutterSpeed" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MinIso"></label>
                <select asp-for="MinIso" asp-items="Html.GetEnumSelectList<MinISO>()" class="form-control"><option value="" class="hidden">Select..</option></select>
            </div>
            <div class="form-group">
                <label asp-for="MaxIso"></label>
                <input asp-for="MaxIso" class="form-control" min="200" max="409600" step="100" />
                <span asp-validation-for="MaxIso" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="IsFullFrame"></label>
                <div>
                    <label>
                        <input type="radio" asp-for="IsFullFrame" value="true" /> Yes
                    </label>
                    <label>
                        <input type="radio" asp-for="IsFullFrame" value="false" /> No
                    </label>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="VideoResulution"></label>
                <input asp-for="VideoResulution" class="form-control" />
                <span asp-validation-for="VideoResulution" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LightMeterings"></label>
                <div>
                    <label>
                        <input type="checkbox" name="LightMeterings" value="@((int)LightMetering.CenterWeighted)" /> Center Weighted
                    </label>
                    <label>
                        <input type="checkbox" name="LightMeterings" value="@((int)LightMetering.Spot)" /> Spot
                    </label>
                    <label>
                        <input type="checkbox" name="LightMeterings" value="@((int)LightMetering.Evaluative)" />Evaluative
                    </label>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="Description"></label>
               
                <input asp-for="Description" class="form-control" />

                <span asp-validation-for="Description" class="text-danger"></span>

            </div>
            <div class="form-group">
                <label asp-for="ImageUrl"></label>
                <input asp-for="ImageUrl" class="form-control" />
                <span asp-validation-for="ImageUrl" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-success">Edit Camera</button>
        </form>
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
