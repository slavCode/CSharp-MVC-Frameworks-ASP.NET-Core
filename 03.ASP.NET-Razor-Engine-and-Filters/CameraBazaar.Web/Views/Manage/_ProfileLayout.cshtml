@using System.Security.Claims
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Camera Bazaar</title>

    <environment include="Development">
        <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
        <link rel="stylesheet" href="~/css/site.css" />
    </environment>
    <environment exclude="Development">
        <link rel="stylesheet" href="https://ajax.aspnetcdn.com/ajax/bootstrap/3.3.7/css/bootstrap.min.css"
              asp-fallback-href="~/lib/bootstrap/dist/css/bootstrap.min.css"
              asp-fallback-test-class="sr-only" asp-fallback-test-property="position" asp-fallback-test-value="absolute" />
        <link rel="stylesheet" href="~/css/site.min.css" asp-append-version="true" />
    </environment>
</head>
<body>
<form asp-area="" asp-controller="Account" asp-action="Logout" method="post" id="logoutForm">
<div class="row">
    <div class="col-lg-2">
        <ul class="nav flex-column">
            <li>
                <a asp-area="" asp-controller="Cameras" asp-action="All">All Cameras</a>
            </li>
            <li >
                <a asp-area="" asp-controller="Users" asp-action="Details" asp-route-id="@Context.User.FindFirstValue(ClaimTypes.NameIdentifier)">My Profile</a>
            </li>
            <li >
                <a asp-area="" asp-controller="Users" asp-action="Edit" asp-route-id="@Context.User.FindFirstValue(ClaimTypes.NameIdentifier)">Edit My Profile</a>
            </li>
            <li>
                <a asp-area="" asp-controller="Cameras" asp-action="Add">Add Camera</a>
            </li>
            <li >
                <button type="submit" class="btn btn-link navbar-btn navbar-link">Log out</button>
            </li>
        </ul>
    </div>
    <div class="col-lg-4">
        @RenderBody()
    </div>
</div>
</form>


@RenderSection("Scripts", required: false)
</body>
</html>
