@model CarsByMakeModel
@{
    var firstLetter = @Model.Make.ToUpper()[0];
    var capitalizedMake = firstLetter + @Model.Make.Substring(1);
}

@{
    ViewData["Title"] = $"{capitalizedMake}";
}
<h2>@capitalizedMake</h2>
<table class="table table-bordered table-hover">
    <thead>
        <tr>
            <th>Model</th>
            <th>Travelled Distance</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var car in Model.Cars)
        {
            <tr>
                <td>@car.Model</td>
                <td>@(car.TravelledDistance / 1000) km</td>
            </tr>
        }
    </tbody>
</table>
