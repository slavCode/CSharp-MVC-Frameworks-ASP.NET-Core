@model CarDealer.Web.Models.Cars.CarsByMakeModel
@{
    ViewData["Title"] = "All Cars By Make";
}
<h2>Cars from @Model.Make</h2>
<table class="table">
    <thead>
        <tr>
            <th>Make</th>
            <th>Model</th>
            <th>Travelled Distance</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var car in Model.Cars)
        {
            <tr>
                <td>@car.Make</td>
                <td>@car.Model</td>
                <td>@(car.TravelledDistance / 1000) KM</td>
            </tr>
        }
    </tbody>
</table>
