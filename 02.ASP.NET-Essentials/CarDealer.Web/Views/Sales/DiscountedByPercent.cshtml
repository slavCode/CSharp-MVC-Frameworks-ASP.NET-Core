@model CarDealer.Web.Models.Sales.DiscountedByPercentSalesModel
@{
    ViewData["Title"] = "DiscountedByPercent";
}

<h2>@Model.Percent% Discount</h2>
<table class="table table-bordered table-hover">
    <tr>
        <th>Car Make</th>
        <th>Car Model</th>
        <th>Car Travelled Distance</th>
        <th>Customer Name</th>
        <th>Price</th>
        <th>Price With Discount</th>
        <th>Discount</th>
    </tr>
    @foreach (var sale in Model.Sales)
    {
        <tr>
            <td>@sale.CarMake</td>
            <td>@sale.CarModel</td>
            <td>@(sale.CarTravelledDistance / 1000) Km.</td>
            <td>@sale.CustomerName</td>
            <td>$@sale.TotalPrice</td>
            <td>$@sale.DiscountedPrice</td>
            <td>@sale.Discount%</td>
        </tr>
    }
</table>

