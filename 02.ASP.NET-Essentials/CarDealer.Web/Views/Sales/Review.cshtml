@model SaleReviewModel
@{
    ViewData["Title"] = "Review Sale";
}

<h2>@ViewData["Title"]</h2>
<div class="row">
    <div class="col-md-5">
        <form method="post">
            <div class="form-group">
                <label asp-for="Customer"></label>
                <input asp-for="CustomerId" class="form-control" disabled />
                <span asp-validation-for="Customer" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Car"></label>
                <input asp-for="CarId" class="form-control" disabled />
                <span asp-validation-for="Car" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DiscountAsString"></label>
                <input asp-for="Discount" class="form-control" disabled />
            </div>
            <div class="form-group">
                <label asp-for="Price"></label>
                <input asp-for="Price" class="form-control" disabled />
            </div>
            <div class="form-group">
                <label asp-for="DiscountedPrice"></label>
                <input asp-for="DiscountedPrice" class="form-control" disabled />
                <span asp-validation-for="DiscountedPrice" class="text-danger"></span>
            </div>
            <div>
                <div class="btn btn-default">
                    <div>
                        <a href="/sales/all">Cancel</a>
                    </div>
                </div>
                <button type="submit" class="btn btn-primary">Finalize</button>
            </div>

        </form>
    </div>
</div>