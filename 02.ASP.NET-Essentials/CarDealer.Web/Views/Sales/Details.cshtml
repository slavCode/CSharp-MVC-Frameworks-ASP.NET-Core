@model ByIdSalesModel
@{
    ViewData["Title"] = "Sale Details";
}
<h2>Sale ID @Model.SaleId</h2>
<table class="table">
    <tr>
        <th>Car Make</th>
        <th>Car Model</th>
        <th>Car Travelled Distance</th>
        <th>Customer Name</th>
        <th>Price</th>
        <th>Price With Discount</th>
        <th>Discount</th>
    </tr>
    <tr>
        <td>@Model.ById.CarMake</td>
        <td>@Model.ById.CarModel</td>
        <td>@Model.ById.CarTravelledDistance</td>
        <td>@Model.ById.CustomerName</td>
        <td>$@Model.ById.TotalPrice</td>
        <td>$@Model.ById.DiscountedPrice</td>
        <td>@Model.ById.Discount%</td>
    </tr>
</table>
