@model AllSalesModel
@{
    ViewData["Title"] = "All Sales";
}
<h2>@ViewData["Title"]</h2>
<table class="table table-bordered table-hover">
    <tr>
        <th>Car Make</th>
        <th>Car Model</th>
        <th>Car Travelled Distance</th>
        <th>Customer Name</th>
        <th>Price</th>
        <th>Discounted Price</th>
        <th>Discount</th>
    </tr>
    @foreach (var sale in Model.Sales)
    {
        <tr>
            <td>@sale.CarMake</td>
            <td>@sale.CarModel</td>
            <td>@(sale.CarTravelledDistance / 1000) Km.</td>
            <td>@sale.CustomerName</td>
            <td>$@sale.TotalPrice</td>
            <td>$@sale.DiscountedPrice</td>
            <td>@sale.Discount%</td>
            <td><a href="/sales/@sale.Id">More Details</a></td>
        </tr>
    }
</table>
